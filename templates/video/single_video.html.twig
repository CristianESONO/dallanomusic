{# templates/single_video.html.twig #}

{% extends 'base.html.twig' %}

{% block content %}
    <!-- PAGE CAPTION
    ============================================= -->	
    <div class="page-caption-1">
        <div class="caption-content">
            <p class="body-three">Legendary Concert</p>
            <div class="spacer-15"></div>
            <h3>{{ video.title }}</h3>
        </div>
    </div>

    <!-- VIDEO
    ============================================= -->
    <div class="spacer-90 spacer-md-45 spacer-sm-30"></div>
    <div class="container px-md-0 px-4 featured-video">
        <div class="video-player-one" style="height:50vh">
            <video class="video-js" playsinline controls preload="auto" poster="{{ asset('uploads/images/' ~ video.thumbnail) }}">
                <source src="{{ asset('uploads/files/' ~ video.file) }}" />
            </video>
        </div>
    </div>

    <div class="spacer-60 spacer-md-30"></div>
    <div class="article">
        <div class="container px-md-0 px-4">
            <div class="spacer-30"></div>
            <p class="body-two">
                {{ video.description }}
            </p>
        </div>
    </div>
{% endblock %}
